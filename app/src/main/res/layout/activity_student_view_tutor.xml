<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.student.ViewTutorActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tutorCurrentLocationTxtLayout"
            android:layout_width="0dp"
            app:layout_constraintWidth_max="488dp"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/tutorCurrentLocationTxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:editable="false"
                android:hint="@string/current_location_text"
                android:inputType="none"
                android:textColorHint="#A1887F"
                android:ems="10"
                android:gravity="start|top"
                android:textSize="23sp" />
        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/viewinMapsBtn"
            android:layout_width="wrap_content"
            android:layout_height="55dp"
            android:layout_marginTop="24dp"
            android:text="@string/view_in_maps_text"
            android:textSize="15sp"
            app:layout_constraintStart_toStartOf="@+id/tutorCurrentLocationTxtLayout"
            app:layout_constraintTop_toBottomOf="@+id/tutorCurrentLocationTxtLayout" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tutorStatusTxtLayout"
            android:layout_width="0dp"
            app:layout_constraintWidth_max="488dp"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="42dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/viewinMapsBtn">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/tutorStatusTxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:editable="false"
                android:hint="@string/current_status_text"
                android:inputType="none"
                android:ems="10"
                android:textColorHint="#A1887F"
                android:gravity="start|top"
                android:textSize="23sp" />
        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/requestMeetingBtn"
            style="@style/Widget.Material3.Button.TonalButton"
            android:layout_width="260dp"
            android:layout_height="55dp"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="32dp"
            android:text="@string/request_meeting_text"
            android:textSize="15sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tutorStatusTxtLayout" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>
